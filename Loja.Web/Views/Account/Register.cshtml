@model LoginViewModel

<div class="row div-login-form">
      <div class="col-10 col-md-10 col-lg-10">
        <h4>Registre-se no site.</h4>         
          <form asp-controller="Account" asp-action="Register" method="post">
              <hr />
              <div asp-validation-summary="All" class="text-danger"></div>
              <div class="form-group div-form-group">
                <label asp-for="UserName"> </label>
                <input asp-for="UserName" class="form-control form-input-local" />
                <span asp-validation-for="UserName" class="text-danger"></span>
              </div>
                <div class="form-group div-form-group">
                  <label asp-for="Password"></label>
                  <input asp-for="Password" class="form-control form-input-local" />
                  <span asp-validation-for="Password" class="text-danger"></span>
                </div>
              <div class="form-group div-form-group">
                <input type="submit" class="btn btn-success form-input-local" value="Registrar" />
              </div>
          </form>
    </div>
</div>
